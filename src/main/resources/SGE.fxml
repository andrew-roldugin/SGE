                                    <Button mnemonicParsing="false" onAction="#remove" text="удалить" />
                                    <TextField fx:id="deleteTF" />
                                 </children>
                              </HBox>
                              <HBox prefHeight="23.0" prefWidth="202.0">
                                 <children>
